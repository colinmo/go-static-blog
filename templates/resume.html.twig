{% extends "base.html.twig" %}
{% set cdate = created_date|date('c') %}
{% set udate = updated_date|date('c') %}
{% block title %}
	{{ title }}
{% endblock %}
{% block content %}
	<style>
		article {
			--plus-five-xp: "\1F7B4";
		}
		.indicate-plus-five::before {
			content: var(--plus-five-xp);
		}
		.professional {
			list-style-type: var(--plus-five-xp);
		}

		article.h-resume {
			display: grid;
			grid-template: "header contact" auto "experience skills" auto "experience education" auto "summary summary" auto / 2fr 1fr !important;
			gap: 10px 10px;
		}

		header {
			grid-area: header;
		}

		#experience {
			grid-area: experience;
			padding: 0 14px;
			box-shadow: 1px 2px 10px black;
		}

		#skill {
			font-size: smaller;
			grid-area: skills;
			padding: 0 14px;
			box-shadow: 1px 2px 10px black;
		}

		#education {
			font-size: smaller;
			grid-area: education;
			padding: 0 14px;
			box-shadow: 1px 2px 10px black;
		}

		#contact {
			font-size: smaller;
			grid-area: contact;
		}

		#summary {
			grid-area: summary;
		}

		a[href^="https://www.linkedin.com"]::before {
			content: url("data:image/svg+xml,%3Csvg width='24' height='16' viewBox='0 0 16 16' xmlns='http://www.w3.org/2000/svg' fill='none'%3E%3Cpath fill='%230A66C2' d='M12.225 12.225h-1.778V9.44c0-.664-.012-1.519-.925-1.519-.926 0-1.068.724-1.068 1.47v2.834H6.676V6.498h1.707v.783h.024c.348-.594.996-.95 1.684-.925 1.802 0 2.135 1.185 2.135 2.728l-.001 3.14zM4.67 5.715a1.037 1.037 0 01-1.032-1.031c0-.566.466-1.032 1.032-1.032.566 0 1.031.466 1.032 1.032 0 .566-.466 1.032-1.032 1.032zm.889 6.51h-1.78V6.498h1.78v5.727zM13.11 2H2.885A.88.88 0 002 2.866v10.268a.88.88 0 00.885.866h10.226a.882.882 0 00.889-.866V2.865a.88.88 0 00-.889-.864z'/%3E%3C/svg%3E");
			display: inline;
		}

		h3 span {
			font-size: smaller;
		}
		h3 > cite ~ span,
		.h-event h3 span:nth-of-type(2),
		h5 span:nth-of-type(2) {
			float: right;
		}
		h2 {
			border-bottom: thin solid var(--header-color);
		}
		h3 + h4 {
			margin-top: 0;
		}
		.h-event h3 {
			margin-bottom: 0;
		}
	</style>
	<article class="h-resume">
		<header>
			<h1 class="p-name">
				<a class="p-contact" href="{{ resume.Contact.URL|default('#') }}" style="color:var(--header-color)">{{ resume.Contact.Name }}</a>
			</h1>
			<p class="tagline">{{ resume.Contact.Title }}</p>
		</header>
		<section id="experience">
			<h2>Work Experience</h2>
			{% for experience in resume.Experience %}
				<div class="p-experience experience-{{ (experience.Category|lower)|replace({' ':'-'}) }}" style="clear:both">
					{% if experience.Category == "Work History" %}
						<div class="h-event">
							<h3>
								<span class="p-name">{{ experience.Name }}</span>
								<span>
									<time class="dt-start" datetime="{{ experience.StartDate|date('c') }}">{{ experience.StartDate|date('Y') }}</time>
									-
									{% if experience.End|length > 0 %}
										<time class="dt-end" datetime="{{ experience.EndDate|date('c') }}">{{ experience.EndDate|date('Y') }}</time>
									{% else %}
										Present
									{% endif %}
								</span>
							</h3>
							<h4 class="p-location">
								<a class="u-url" href="https://www.griffith.edu.au">{{ experience.Location }}</a>
							</h4>
							<p class="p-summary">{{ experience.Summary}}</p>
							<span class="p-description">
								{{ experience.Description }}
							</span>
						</div>
					{% elseif experience.Category == "Publication" %}
						<div class="h-cite">
							<h3>Publication:
								<cite class="p-name">{{ experience.Name }}</cite>
								{% if experience.URL %}
									[<a class="u-url u-uid" href="{{ experience.URL}}">Details</a>]
								{% endif %}<br/><time class="dt-published" datetime="{{ experience.PublishedDate|date('c') }}">{{ experience.PublishedDate|date('Y-m-d') }}
								</time>
							</h3>
							<span class="p-summary">{{ experience.Summary }}</span>
						</div>
					{% endif %}
				</div>
                <hr>
			{% endfor %}
		</section>

		<section id="skill">
			<h2>Skills</h2>
			<p class="legend">
				<span class="indicate-plus-five"></span>
				indicates recent, professional uses.</p>
			<h3 class="Methodologies">Methodologies</h3>
			<ul>
				{% for member,level in resume.FlatSkills.Methodologies %}
					<li {% if level == "p" %} class="professional" {% endif %}>{{member}}</li>
				{% endfor %}
			</ul>
			<h3 class="Languages">Languages</h3>
			<ul>
				{% for member,level in resume.FlatSkills.Languages %}
					<li {% if level == "p" %} class="professional" {% endif %}>{{member}}</li>
				{% endfor %}
			</ul>
			<h3 class="Libraries">Libraries and Tools</h3>
			<ul>
				{% for member,level in resume.FlatSkills.Libraries %}
					<li {% if level == "p" %} class="professional" {% endif %}>{{member}}</li>
				{% endfor %}
			</ul>
		</section>
		<section id="education">
			<h2>Education</h2>
			{% for education in resume.Education %}
				<div class="p-education education-{{ (education.Category|lower)|replace({' ':'-'}) }}">
					<h3 class="p-name">{{ education.Name }}
						{% if education.URL %}
							[<a href="{{ education.URL}}">Confirm</a>]
						{% endif %}
					</h3>
					<p>
						<time class="dt-start" datetime="{{ education.StartDate|date('c') }}">{{ education.StartDate|date('Y') }}</time>
						{% if education.End %}
							-
							<time class="dt-end" datetime="{{ education.EndDate|date('c') }}">{{ education.EndDate|date('Y') }}
							</time>{% endif %}:
							{{ education.Location }}
					</p>
				</div>
			{% endfor %}
		</section>
		<section id="contact">
			<h2>Contact</h2>
			{% if resume.Contact.LinkedIn|length > 0%}
				<a href="{{ resume.Contact.LinkedIn }}">LinkedIn</a>
			{% endif %}
		</section>
		<section id="summary">
			<hr>
			{{ synopsis|raw }}
			{{ content|raw }}
		</section>
		<div class="post-meta" style="font-size: 0.6em;margin-bottom: 10px;">Last updated
			<time class="dt-updated" datetime="{{ udate }}">{{ updated_date|date('j M Y, h:i a') }}</time>
		</div>
	</article>
{% endblock %}
